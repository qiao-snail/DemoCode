@{

    ViewBag.Title = "Login";
}
@model FormLogin.Models.LoginViewModel
<div class="row">
    <div class="col-md-5 col-md-offset-3" style="margin-top:10%">
        <div class="panel panel-default">
            <div class="panel-heading text-center">
                登录
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <div class="form-group">
                        @Html.LabelFor(m => m.UserName, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-4 col-md-offset-8">
                            <div class="checkbox">
                                @Html.CheckBoxFor(m => m.Remember, new { @class = "checkbox" })
                                @Html.LabelFor(m => m.Remember, new { @class = "control-label" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-4 col-md-8">
                            <input type="submit" class="btn btn-lg btn-primary btn-block" style="width:100px" value="提交" />
                        </div>
                    </div>
                }
            </div>
        </div>

    </div>
</div>